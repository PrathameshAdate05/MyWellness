<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fragment_MY_Profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.MyProfileFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"

            android:gravity="center"
            android:elevation="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/TV_Profile_Image"
                android:background="@drawable/my_profile_circle"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="35sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TV_Profile_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TV_Profile_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start"

            android:layout_marginStart="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV_Profile_Email"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_mail"
                android:fontFamily="@font/roboto"
                android:background="@drawable/textview_border"
                android:padding="8dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"

            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV_Profile_Contact_No"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_phone"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"

            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV_Profile_DOB"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_date"
                android:padding="8dp"
                android:fontFamily="@font/roboto"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"

            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV_Profile_Gender"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_gender"
                android:padding="8dp"
                android:fontFamily="@font/roboto"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TVProfilePatientStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_patient"
                    android:padding="8dp"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/textview_border"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV_Profile_Address"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_home"
                android:padding="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>